{
  "name": "tokenbridge-contracts",
  "version": "5.4.1",
  "description": "Bridge",
  "author": "POA network",
  "license": "GPLv3",
  "private": true,
  "scripts": {
    "build": "yarn workspace contracts compile && yarn workspace contracts flatten",
    "test": "yarn workspace contracts test",
    "lint": "yarn run lint:js && yarn run lint:sol",
    "lint:js": "yarn eslint .",
    "lint:js:fix": "yarn eslint . --fix",
    "lint:sol": "yarn solhint --max-warnings 0 \"contracts/contracts/**/*.sol\"",
    "lint:sol:prettier:fix": "yarn prettier --write \"contracts/contracts/**/*.sol\""
  },
  "workspaces": [
    "contracts",
    "deploy",
    "upgrade"
  ],
  "devDependencies": {
    "@codechecks/client": "^0.1.9",
    "eslint": "^6.3.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-config-prettier": "^6.2.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-node": "^10.0.0",
    "eslint-plugin-prettier": "^3.0.1",
    "eth-gas-reporter": "^0.2.11",
    "prettier": "^1.18.2",
    "prettier-plugin-solidity": "^1.0.0-alpha.32",
    "solhint": "^2.2.0",
    "solhint-plugin-prettier": "0.0.3"
  }
}
